include module

- if(LANG == undefined) LANG = locals.locale;

doctype html
html
	head
		script(src='https://kit.fontawesome.com/b6555dc94f.js', crossorigin='anonymous')
		block Subject
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		script(type='text/javascript').
			function getObject(v, i) {
				Object.defineProperty(v, i, {value: v[i], writable: false});
			}
			getObject(window.WebSocket, "send");
			getObject(window.WebSocket, "onmessage");
			getObject(window, "WebSocket");

		block Search
			meta(name='description', content=LANG['meta_desc'] || L('META_DESC'))
			meta(name='keywords', content=LANG['meta_keys'] || L('META_KEYS'))

		block OpenGraph
			meta(property='og:image', content=locals.ogImage || "http://JJo.kr/img/ogImage.png")
			meta(property='og:url', content=locals.ogURL || "http://JJo.kr/")
			meta(property='og:title', content=locals.ogTitle || "쪼롤 - League of Legends 정보 검색 사이트")
			meta(property='og:description', content=locals.ogDescription || "롤 전적검색은 JJO.KR")

		+PageHead()
			block Preload
		block CSS
		block JS

	body(style='min-width: 640px;')
		div#Top
			+Menu()
			div#global-notice
				div#gn-content
					include ../public/global_notice.html
				+Expl(L('GLOBAL_NOTICE'))
			block Top
		div#Jungle
			span#mobile= locals.mobile
			span#summonerID= DATA._id
			div#Background
			block Jungle
		div#Middle
			block Middle
		div#Footer
			div(style='width: 1090px; height: 90px; margin: 0px auto;')
				div.footer-title <div style='font-size: 19px'>도토리끄투</div><div style='font-size: 12px;'>(C)2022, 도토리</div>
				div.footer-legal 이 프로그램은 어떠한 형태의 보증도 제공되지 않는 자유 소프트웨어이며<br>배포 규정을 만족시키는 조건 아래 자유롭게 재배포할 수 있습니다.<br><a target='_blank' href='https://github.com/DotoriKKuTu/KKuTu' style='font-weight: bold;'>https://github.com/DotoriKKuTu/KKuTu</a>
				div.footer-legal WordNet 3.0ⓒPrinceton University.<br>한국어 단어에 대한 저작권은 모두 국립국어원에 있습니다.<br><a target='_blank' href='https://wordnet.princeton.edu' target='_blank' style='font-weight: bold; margin-right: 5px;'>WordNet</a><a target='_blank' href='https://www.korean.go.kr' target='_blank' style='font-weight: bold;'>국립국어원</a>
				div(style='float: left; width: 190px; margin-left: 132px;')
					div.footer-hlink(style='float:right; margin-top: 30px;') <a target='_blank' href='https://discord.gg/38UdFdyQGH' style='font-weight: bold;'>공식 디스코드</a>
					div.footer-hlink(style='float:right; margin-top: 30px;') <a target='_blank' href='/notice/thanks.html' style='font-weight: bold;'>고마운 분들</a>
					br
					div.footer-hlink <a target='_blank' href='/notice/operation.html' style='font-weight: bold;'>서비스 이용약관</a>
					div.footer-hlink <a target='_blank' href='/notice/privacy.html' style='font-weight: bold;'>개인정보처리방침</a>
			block Footer
			+separator(10)